<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dreams_track"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activity.RecordDreamActivity"
            android:exported="true"
            android:label="Запись сна" />
            
        <activity
            android:name=".activity.DreamDetailActivity"
            android:exported="false"
            android:label="Детали сна" />
            
        <activity
            android:name=".activity.EditDreamActivity"
            android:exported="false"
            android:label="Редактирование сна" />
            
        <activity
            android:name=".activity.AtlasActivity"
            android:exported="false"
            android:label="Атлас снов" />
            
        <activity
            android:name=".activity.DreamHistoryActivity"
            android:exported="false"
            android:label="История снов" />
            
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="false"
            android:label="Настройки" />
            
    </application>

</manifest>