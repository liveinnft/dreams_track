<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_openrouter_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Информация об OpenRouter API"
        android:textColor="@color/text_secondary_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_usage_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Здесь будет информация об использовании API"
        android:textColor="@color/text_secondary_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_clear_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Очистить логи" />

    <TextView
        android:id="@+id/tv_logs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Логи запросов:"
        android:textColor="@color/text_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_text"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Логи будут отображены здесь..."
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp" />

    </ScrollView>

</LinearLayout>